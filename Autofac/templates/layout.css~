/* page settings */
@page {
	margin: 0mm 0mm 0mm 0mm;
	size: 9.25in 7in;

	@footnotes {
		border-top: thin solid black;
		padding-top: 0.3em;
		margin-top: 0.6em;
		margin-left: 10%;
	}
	
	@bottom-left {
		font: 8pt Helvetica, serif;
		vertical-align: bottom;
		padding: 0 3em 3em 0em;
		content: string(owner, first);
	}
	
	@bottom-right {
		font: 8pt Helvetica, serif;
		content: counter(page);
		text-align: right;
		vertical-align: top;
		padding-top: 2em;
	}
}

@page cover { margin: 0; }

@page blank { 
	margin: 0; 
	
	@bottom-left {
		content: "";
	}
	
	@bottom-right {
		content: "";
	}
}

@page additional { 
	padding: 27mm 16mm 27mm 16mm;
}

